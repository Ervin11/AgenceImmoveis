{% extends 'base.html.twig' %}

{% block title %}Nouvelle annonce{% endblock %}

{% block body %}

    <h1 class="text-center text-white mt-5">Créer une nouvelle annonce</h1>

    <div class="mt-5 w-75 mx-auto jumbotron p-5">

        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-3">{{ form_row(form.type) }}</div>
            <div class="col-md-3">{{ form_row(form.habitat) }}</div>
            <div class="col-md-2">{{ form_row(form.surface) }}</div>
            <div class="col-md-2">{{ form_row(form.rooms) }}</div>
            <div class="col-md-2">{{ form_row(form.bedrooms) }}</div>
        </div>

        <div class="row mt-2">
            <div class="col-md-2">{{ form_row(form.floor) }}</div>
            <div class="col-md-4">{{ form_row(form.heat) }}</div>
            <div class="col-md-2">{{ form_row(form.price) }}</div>
            <div class="col-md-4">{{ form_row(form.city) }}</div>
        </div>

        <div class="row mt-2">
            <div class="col-md-2">{{ form_row(form.postal_code) }}</div>
            <div class="col-md-6">{{ form_row(form.address) }}</div>
            <div class="col-md-4">{{ form_row(form.image) }}</div>
        </div>

        <div class="row mt-2">
            <div class="col-md-12">{{ form_row(form.description) }}</div>
        </div>

    </div>

    <div class="d-flex justify-content-center mt-5 mb-5">
        <a class="btn btn-primary w-25 mr-5" href="{{ path('offer_index') }}">Retour à la liste</a>
        {{ form_widget(form.submit) }}
        {{ form_widget(form._token) }}
    </div>


    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}
